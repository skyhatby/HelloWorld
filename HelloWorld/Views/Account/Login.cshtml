@model HelloWorld.Models.LoginModel

@{
    ViewBag.Title = Resources.Resource.LogIn;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>@Resources.Resource.LogInForm</legend>
            <div>
                <div class="form-group">
                    <p class="col-lg-3 control-label">@Resources.Resource.Name</p>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = @Resources.Resource.Name })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    <p class="col-lg-3 control-label">@Resources.Resource.PassLetter</p>
                    <div class="col-lg-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @Resources.Resource.PassLetter })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="form-group">
                    <p class="col-lg-2 control-label">@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })</p>
                    <div class="col-lg-1">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-success" value="@Resources.Resource.LogIn" />
        </fieldset>
        <a href="~/Account/Register" class="btn btn-danger">@Resources.Resource.Registration</a>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
