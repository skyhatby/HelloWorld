@model HelloWorld.Models.Chapter

@{
    ViewBag.Title = @Resources.Resource.Edit+" "+@Resources.Resource.ChapterName;
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Resource.Edit @Resources.Resource.ChapterName</legend>

        @Html.HiddenFor(model => model.ChapterId)
        @Html.HiddenFor(model => model.ChapterContent)
        @Html.HiddenFor(model => model.BookId)

        <p class="col-lg-3 control-label">@Resources.Resource.ChapterName</p>
        <div class="col-lg-8">
            @Html.TextBoxFor(model => model.ChapterName, new { @class = "form-control", @placeholder = @Resources.Resource.BookName })
            @Html.ValidationMessageFor(model => model.ChapterName)
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-6">
                <input type="submit" class="btn btn-success" value="@Resources.Resource.Edit" />
            </div>
        </div>
    </fieldset>
}


<a href="~/Book/Chapters/@Model.BookId" class="btn btn-danger">@Resources.Resource.BackToList</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
