@model IEnumerable<HelloWorld.Models.Chapter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Resource.AddChapter, "ChapterCreate", new {id = ViewBag.BookId})
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChapterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChapterContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChapterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChapterContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.ActionLink("Edit", "ChapterEdit", new { id=item.ChapterId }) |
            @Html.ActionLink("Details", "ChapterDetails", new { id=item.ChapterId }) |
            @Html.ActionLink("Delete", "ChapterDelete", new { id=item.ChapterId })
        </td>
    </tr>
}

</table>
