@model HelloWorld.Models.Book

@{
    ViewBag.Title = @Resources.Resource.Edit;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Resource.Edit</legend>
        @Html.HiddenFor(model => model.BookId)
        @Html.HiddenFor(model => model.UserId, "UserProfile")
        <p class="col-lg-3 control-label">@Resources.Resource.BookName</p>
        <div class="col-lg-8">
            @Html.TextBoxFor(model => model.BookName, new { @class = "form-control", @placeholder = @Resources.Resource.BookName })
            @Html.ValidationMessageFor(model => model.BookName)
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-6">
                <input type="submit" class="btn btn-success" value="@Resources.Resource.Edit" />
            </div>
        </div>
    </fieldset>
}

<a href="~/Book" class="btn btn-danger">@Resources.Resource.BackToList</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
