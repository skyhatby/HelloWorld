@model HelloWorld.Models.Chapter

@{
    ViewBag.Title = Resources.Resource.Create;
}

<h2>@Resources.Resource.Create @Resources.Resource.Chapter</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   <div class="form-group">
        <p class="col-lg-3 control-label">@Resources.Resource.ChapterName</p>
        <div class="col-lg-8">
            @Html.TextBoxFor(m => m.ChapterName, new { @class = "form-control", @placeholder = @Resources.Resource.ChapterName })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-6">
            <input type="hidden" value=" @(new { id = @ViewBag.BookId })" />
            <input type="submit" class="btn btn-success" value="@Resources.Resource.Create" />
        </div>
    </div>
   
}


<a href="~/Book/Chapters/@ViewBag.BookId" class="btn btn-danger">@Resources.Resource.BackToList</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
